{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Line chart of average daily caloric intake by age group over recent years",
    "data": {
        "values": [
            {
                "Year": 2019,
                "Children": 1600,
                "Teens": 2200,
                "Adults": 2500,
                "Seniors": 2000
            },
            {
                "Year": 2020,
                "Children": 1620,
                "Teens": 2250,
                "Adults": 2550,
                "Seniors": 2050
            },
            {
                "Year": 2021,
                "Children": 1640,
                "Teens": 2300,
                "Adults": 2600,
                "Seniors": 2100
            },
            {
                "Year": 2022,
                "Children": 1660,
                "Teens": 2350,
                "Adults": 2650,
                "Seniors": 2150
            },
            {
                "Year": 2023,
                "Children": 1680,
                "Teens": 2400,
                "Adults": 2700,
                "Seniors": 2200
            },
            {
                "Year": 2024,
                "Children": 1700,
                "Teens": 2450,
                "Adults": 2750,
                "Seniors": 2250
            }
        ]
    },
    "transform": [
        {
            "fold": [
                "Children",
                "Teens",
                "Adults",
                "Seniors"
            ],
            "as": [
                "Age Group",
                "Caloric Intake"
            ]
        }
    ],
    "width": 800,
    "height": 500,
    "mark": {
        "type": "line",
        "point": true
    },
    "encoding": {
        "x": {
            "field": "Year",
            "type": "ordinal",
            "title": "Year"
        },
        "y": {
            "field": "Caloric Intake",
            "type": "quantitative",
            "title": "Average Daily Caloric Intake (calories)",
            "axis": {
                "format": ".1f"
            }
        },
        "color": {
            "field": "Age Group",
            "type": "nominal",
            "scale": {
                "domain": [
                    "Children",
                    "Teens",
                    "Adults",
                    "Seniors"
                ],
                "range": [
                    "#FF6347",
                    "#FFD700",
                    "#32CD32",
                    "#1E90FF"
                ]
            },
            "title": "Age Group"
        }
    },
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}