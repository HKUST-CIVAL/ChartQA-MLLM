            {
                "Year": 2025,
                "Americas": 5600,
                "Europe": 4800,
                "Asia": 5800,
                "Africa": 2300,
                "Oceania": 1800
            }
        ]
    },
    "transform": [
        {
            "fold": [
                "Americas",
                "Europe",
                "Asia",
                "Africa",
                "Oceania"
            ],
            "as": [
                "Region",
                "Emissions"
            ]
        }
    ],
    "width": 600,
    "height": 400,
    "mark": {
        "type": "line",
        "point": true,
        "tooltip": {
            "content": "data"
        }
    },
    "encoding": {
        "x": {
            "field": "Year",
            "type": "ordinal",
            "title": "Year"
        },
        "y": {
            "field": "Emissions",
            "type": "quantitative",
            "title": "Annual CO2 Emissions (in Million Tons)",
            "axis": {
                "format": ".1f"
            },
            "scale": {
                "reverse": true
            }
        },
        "color": {
            "field": "Region",
            "type": "nominal",
            "scale": {
                "domain": [
                    "Americas",
                    "Europe",
                    "Asia",
                    "Africa",
                    "Oceania"
                ],
                "range": [
                    "#FF5733",
                    "#33FF57",
                    "#3357FF",
                    "#FF33A8",
                    "#A833FF"
                ]
            },
            "title": "Region"
        }
    },
    "config": {
        "axisY": {
            "minExtent": 30
        },
        "line": {
            "point": {
                "filled": true,
                "fill": "white"
            }
        },
        "text": {
            "align": "center",
            "baseline": "middle",
            "dx": 5,
            "dy": -5
        }
    }
}