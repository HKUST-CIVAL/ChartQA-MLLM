            },
            {
                "Year": 2021,
                "Americas": 5200,
                "Europe": 4400,
                "Asia": 5400,
                "Africa": 1900,
                "Oceania": 1400
            },
            {
                "Year": 2022,
                "Americas": 5300,
                "Europe": 4500,
